<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.DeviceViewers.RotateViewer"
             xmlns:Components="clr-namespace:Apollo.Components"
             Margin="10 5"
             DetachedFromVisualTree="Unloaded">

  <StackPanel VerticalAlignment="Center">
    <Border BorderBrush="{DynamicResource ThemeBorderHighBrush}" BorderThickness="0 0 0 1">
      <Components:Dial VerticalAlignment="Center" Title="Angle" x:Name="Angle" Minimum="-180" Maximum="180" Default="0" Exponent="1" Round="0" Unit="°" Centered="true" DisabledText="Unused"
                       ValueChanged="Angle_Changed" />
    </Border>

    <CheckBox Margin="0 5 0 0" HorizontalAlignment="Center" x:Name="Bypass" Click="Bypass_Changed">Bypass</CheckBox>
  </StackPanel>
</UserControl>